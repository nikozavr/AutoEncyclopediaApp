<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_profile">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:background="@color/background_top"
            android:id="@+id/layout_top">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:id="@+id/imProfile" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/lblProfileName"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/lblProfileEmail"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/lblProfileStatus" />

                </LinearLayout>

                <Button
                    android:theme="@style/ActionBarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/action_sing_out"
                    android:id="@+id/btnExit"
                    android:layout_gravity="right"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/background_line2"
            android:id="@+id/layout_line"
            android:orientation="horizontal">
        </LinearLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/lstEditions"
                android:visibility="invisible"
                android:listSelector="@color/blue"
                android:choiceMode="singleChoice"/>
        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/downloading"
        android:gravity="center"
        android:layout_alignParentStart="false"
        android:textSize="26dp"
        android:textColor="#000000"
        android:id="@+id/lblDownloadEdition" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/noedition"
        android:gravity="center"
        android:layout_alignParentStart="false"
        android:textSize="26dp"
        android:textColor="#000000"
        android:visibility="invisible"
        android:id="@+id/lblNoEdition" />

</RelativeLayout>
